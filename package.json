{
  "name": "@johnqh/types",
  "version": "1.5.0",
  "description": "Common TypeScript types, interfaces, and enums for 0xmail.box projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json,md}\"",
    "typecheck": "tsc --noEmit",
    "verify": "npm run typecheck && npm run lint && npm run test && npm run build",
    "ai:analyze": "node .ai/scripts/analyze-types.js",
    "ai:validate-exports": "node .ai/scripts/validate-exports.js",
    "ai:docs": "npm run ai:analyze && npm run ai:validate-exports",
    "prepublishOnly": "npm run clean && npm run verify"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "keywords": [
    "typescript",
    "types",
    "interfaces",
    "0xmail",
    "web3"
  ],
  "author": "0xmail.box",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
